<main>
	<section class="form-section">
		<h1>Створення товару</h1>
		<form class="form" method="POST" action="/product-create">
			<strong class="form__title">Інформація про товар</strong>
			<div class="form__content">
				<div class="form__field">
					<label for="name" class="form__label">Назва товару</label>
					<input name="name" type="text" class="form__input" required>
				</div>
				<div class="form__field">
					<label for="price" class="form__label">Ціна</label>
					<input name="price" type="number" class="form__input" required>
				</div>
				<div class="form__field">
					<label for="description" class="form__label">Короткий опис товару</label>
					<textarea name="description" type="text" class="form__input" required></textarea>
					<span class="form__alert">Відображується у картці товару</span>
				</div>
				<button class="form__button">Створити товар</button>
			</div>
		</form>
	</section>
</main>