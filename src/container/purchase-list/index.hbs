{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main>
	<section class="purchase-section">

		{{>heading title="Мої замовлення"}}

		<ul class="purchase-list">
			{{#each data}}
			<a href="purchase-info?id={{id}}">
				<li class="purchase">
					<div class="id">ID: {{id}}</div>
					<div class="purchase-item">
						<div class="title">Товар</div>
						<div class="value">{{product.title}}</div>
					</div>
					<div class="purchase-item">
						<div class="title">Сума замовлення</div>
						<div class="value">{{totalPrice}}₴</div>
					</div>
					<div class="purchase-item">
						<div class="title">Нараховані бонуси</div>
						<div class="value">{{getBonus}}₴</div>
					</div>
				</li>
			</a>
			{{>divider}}
			{{/each}}
		</ul>
	</section>
</main>



