<main class="main">

	<a class="close-button" href="/">
		<img src="/svg/close.svg" alt="close">
	</a>

	<div class="main__content">
		<h1 class="main-title title--center">Назвіть {{#if data.isMix}}мікс{{else}}плейліст{{/if}}</h1>
		<form class="form" method="post" action="/spotify-create{{#if data.isMix}}?isMix=true{{/if}}">
			<input class="form__input" type="text" placeholder="Назва" name="name" required>
			<button class="form__button">Створити</button>
		</form>
	</div>

</main>