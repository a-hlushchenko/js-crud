{{#with data}}
<main>
	<h1 class="main-title">{{name}}</h1>

	<div class="main__content">
		<a href="/spotify-playlist-add?playlistId={{playlistId}}">
			<div class="track">
				<div class="add-img track__img"></div>
				<strong class="title">Додати до плейліста</strong>
			</div>
		</a>

		<ul class="track-list">
			{{#each tracks}}
			<li class="track">
				<img src="{{image}}" alt="icon" class="track__img">
				<div class="track__content">
					<strong class="title">{{name}}</strong>
					<span class="track__author">{{author}}</span>
				</div>
				<a class="delete-button" href="/spotify-track-delete?playlistId={{../playlistId}}&trackId={{id}}">
					<img src="/svg/delete.svg" alt="delete icon">
				</a>
			</li>
			{{/each}}
		</ul>
	</div>
</main>
{{/with}}