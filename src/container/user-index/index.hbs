Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main>
	<section>
		<div class="form">
			<h1 class="form__title">Створення користувача</h1>
			<form method="POST" action="/user-create">
				<div class="form__content">
					<div class="form__field">
						<label for="email" class="form__label">Email адреса</label>
						<input name="email" type="email" class="form__input" required>
					</div>
					<div class="form__field">
						<label for="login" class="form__label">Логін:</label>
						<input name="login" type="login" class="form__input" required>
					</div>
					<div class="form__field">
						<label for="password" class="form__label">Пароль:</label>
						<input name="password" type="password" class="form__input" required>
					</div>
					<button class="form__button">Створити</button>
				</div>
			</form>
		</div>
	</section>

	<section>
		<div class="form">
			<h1 class="form__title">Список користувачів</h1>
			<div class="user-list">
				{{#with data.users}}
				{{#if isEmpty}}
				<mark>Пусто</mark>
				{{else}}
				<ul>
					{{#each list}}
					<li>{{login}} | {{email}} | {{id}}<a class="delete" href="/user-del?id={{id}}">видалити користувача</a><a class="update" href="/user-upd?id={{id}}">змінити пошту користувача</a></li>
					{{/each}}
				</ul>
				{{/if}}
				{{/with}}
			</div>
		</div>
	</section>

	
</main>



